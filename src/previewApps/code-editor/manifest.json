{
  "id": "code-editor",
  "name": "Code Editor",
  "description": "Monaco-based code editor with agent capabilities for goto, insert, format, and more",
  "version": "1.0.0",
  "fileExtensions": [
    ".ts", ".tsx", ".js", ".jsx", ".py", ".java", ".go", ".rs", ".c", ".cpp",
    ".h", ".hpp", ".cs", ".rb", ".php", ".swift", ".kt", ".scala", ".lua",
    ".sh", ".bash", ".zsh", ".fish", ".ps1", ".bat", ".cmd",
    ".json", ".yaml", ".yml", ".toml", ".xml", ".ini", ".cfg",
    ".css", ".scss", ".less", ".html", ".htm", ".vue", ".svelte",
    ".sql", ".graphql", ".proto", ".dockerfile", ".makefile",
    ".md", ".markdown", ".txt", ".log", ".env", ".gitignore"
  ],
  "contentTypes": ["code"],
  "editable": true,
  "capabilities": [
    {
      "name": "gotoLine",
      "description": "Navigate to a specific line number",
      "paramsSchema": {
        "type": "object",
        "properties": {
          "line": { "type": "number", "description": "Line number to navigate to" },
          "column": { "type": "number", "description": "Column number (optional)" }
        },
        "required": ["line"]
      }
    },
    {
      "name": "insertText",
      "description": "Insert text at the current cursor position or a specific line",
      "paramsSchema": {
        "type": "object",
        "properties": {
          "text": { "type": "string", "description": "Text to insert" },
          "line": { "type": "number", "description": "Line number (optional, uses cursor if not specified)" },
          "column": { "type": "number", "description": "Column number (optional)" }
        },
        "required": ["text"]
      }
    },
    {
      "name": "replaceText",
      "description": "Find and replace text in the editor",
      "paramsSchema": {
        "type": "object",
        "properties": {
          "search": { "type": "string", "description": "Text to find" },
          "replace": { "type": "string", "description": "Replacement text" },
          "all": { "type": "boolean", "description": "Replace all occurrences (default: false)" }
        },
        "required": ["search", "replace"]
      }
    },
    {
      "name": "getContent",
      "description": "Get the current editor content",
      "paramsSchema": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "setContent",
      "description": "Replace the entire editor content",
      "paramsSchema": {
        "type": "object",
        "properties": {
          "content": { "type": "string", "description": "New content" },
          "language": { "type": "string", "description": "Language mode (optional)" }
        },
        "required": ["content"]
      }
    },
    {
      "name": "getSelection",
      "description": "Get the currently selected text",
      "paramsSchema": {
        "type": "object",
        "properties": {}
      }
    },
    {
      "name": "formatDocument",
      "description": "Format the entire document",
      "paramsSchema": {
        "type": "object",
        "properties": {}
      }
    }
  ],
  "entry": {
    "kind": "builtin",
    "source": "code-editor"
  }
}
