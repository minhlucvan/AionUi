{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "jsx": "react",
    "paths": {
      "@/*": ["./src/*"],
      "@process/*": ["./src/process/*"],
      "@renderer/*": ["./src/renderer/*"],
      "@worker/*": ["./src/worker/*"],
      "@common/*": ["./src/common/*"],
      "@mcp/*": ["./src/common/*"],
      "@mcp/models/*": ["./src/common/models/*"],
      "@mcp/types/*": ["./src/common/*"]
    }
  },
  "include": ["src/**/*", "uno.config.ts", "src/renderer/types.d.ts"]
}
